
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
<br /><br />
<div id="SearchBoxRow" class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6" style="text-align: center">
        <div class="input-group">
            <input id="SearchTextbox" type="text" class="form-control" placeholder="Search for...">
            <span class="input-group-btn">
                <button class="btn btn-default" type="button" onclick="app.doSearch()">Go!</button>
            </span>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>
<div class="container" style="margin-top: 25px; padding-left: 15px;">
    <div class="row">
        <div id="SearchResultsContainer" class="col-md-7">

        </div>
        <div id="EmployeeDetailsContainer" class="col-md-4">
            
        </div>        
    </div>
</div>

<script type="text/javascript">
    var app = {};
    app.doSearch = function () {
        jQuery.ajax({
            method: "POST",
            url: '@Url.Action("Index","Home")',
            data: { SearchText: jQuery("#SearchTextbox").val() },
            cache: false
        }).done(function (data) {
            jQuery("#SearchResultsContainer").html(data);
        });
    }
    app.showEmpDetails = function (empno) {
        jQuery.ajax({
            method: "GET",
            url: '@Url.Action("Details","Employee")',
            data: { empno: empno },
            cache: false
        }).done(function (data) {
            jQuery("#EmployeeDetailsContainer").html(data);
            });
        return false;
    }
</script>